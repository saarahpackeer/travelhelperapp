<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="Your Trip Calculations:"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:fontFamily="@font/abrilfatface" />

    <TextView
        android:id="@+id/tripDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Trip Locations"
        android:paddingBottom="20dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculated Distance: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tripDistance2"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:hint="Distance" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Consumption"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tripFuelC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fuel Consumption"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Needed: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tripFuelNeeded2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fuel Needed" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Cost: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tripFuelCost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Total Fuel Cost" />
        </TableRow>


    </TableLayout>


    <Button
        android:id="@+id/saveJourney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Save Trip" />

    <Button
        android:id="@+id/deleteTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Discard Trip" />
</LinearLayout>